{
  "name": "personal-homepage",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.1.24",
  "scripts": {
    "dev": "bun scripts/ensure-favicon.ts && next dev",
    "dev:test": "bun scripts/ensure-favicon.ts && next dev --port 3000",
    "build": "bun scripts/ensure-favicon.ts && next build && bun run gen:sitemap && bun scripts/generate-rss.ts",
    "start": "serve out -p 3000",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "gen:sitemap": "bun build next-sitemap.config.mts --target node --outfile .next-sitemap.config.mjs && next-sitemap --config .next-sitemap.config.mjs && rm .next-sitemap.config.mjs",
    "optimize:images": "bun scripts/optimize-images.ts",
    "vitest:run": "vitest run",
    "vitest:watch": "vitest",
    "e2e:run": "bun run e2e:install && bunx start-server-and-test \"bun run dev:test\" http://127.0.0.1:3000 \"CYPRESS_CACHE_FOLDER=.cache/cypress ./node_modules/.bin/cypress run --e2e --browser chrome --headless\"",
    "e2e:open": "bun run e2e:install && bunx start-server-and-test \"bun run dev:test\" http://127.0.0.1:3000 \"CYPRESS_CACHE_FOLDER=.cache/cypress ./node_modules/.bin/cypress open --e2e\"",
    "e2e:chrome": "CYPRESS_CACHE_FOLDER=.cache/cypress ./node_modules/.bin/cypress run --e2e --browser chrome --headless",
    "e2e:edge": "CYPRESS_CACHE_FOLDER=.cache/cypress ./node_modules/.bin/cypress run --e2e --browser edge",
    "e2e:electron": "CYPRESS_CACHE_FOLDER=.cache/cypress ./node_modules/.bin/cypress run --e2e --browser electron",
    "e2e:firefox": "CYPRESS_CACHE_FOLDER=.cache/cypress ./node_modules/.bin/cypress run --e2e --browser firefox",
    "e2e:install": "CYPRESS_CACHE_FOLDER=.cache/cypress bunx cypress install",
    "test": "bun run vitest:run && bun run e2e:run"
  },
  "dependencies": {
    "clsx": "2.1.1",
    "feed": "4.2.2",
    "fuse.js": "7.1.0",
    "github-slugger": "2.0.0",
    "gray-matter": "4.0.3",
    "next": "15.5.2",
    "next-themes": "0.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-social-media-embed": "^2.5.18",
    "rehype": "13.0.2",
    "rehype-autolink-headings": "7.1.0",
    "rehype-prism-plus": "2.0.1",
    "rehype-raw": "7.0.0",
    "rehype-slug": "6.0.0",
    "rehype-stringify": "10.0.1",
    "remark": "15.0.1",
    "remark-gfm": "4.0.1",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.2",
    "unified": "11.0.5",
    "yaml": "2.8.1",
    "zod": "4.1.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "0.5.16",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.3.1",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "cypress": "15.2.0",
    "eslint": "9.35.0",
    "eslint-config-next": "15.5.2",
    "jsdom": "26.1.0",
    "next-sitemap": "^4.2.3",
    "postcss": "8.5.6",
    "serve": "14.2.5",
    "start-server-and-test": "2.0.5",
    "tailwindcss": "^4.1.13",
    "typescript": "5.9.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "browserslist": {
    "production": [
      "last 2 Chrome versions",
      "last 2 Safari versions",
      "last 2 Firefox versions",
      "not dead",
      "not ie > 0"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
