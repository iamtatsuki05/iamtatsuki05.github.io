{
  "name": "personal-homepage",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.1.24",
  "scripts": {
    "dev": "next dev",
    "build": "next build && next-image-export-optimizer && bun scripts/generate-rss.ts",
    "start": "serve out -p 3000",
    "lint": "eslint .",
    "test": "bun run vitest:run && bun run e2e:run",
    "vitest:run": "vitest run --pool threads --poolOptions.threads.singleThread",
    "vitest:watch": "vitest",
    "e2e:dev": "next dev --port 3000",
    "e2e:install": "bunx cypress install",
    "e2e:run": "bun run e2e:install && bunx start-server-and-test \"bun run e2e:dev\" http://127.0.0.1:3000 \"bunx cypress run --e2e --browser chrome\"",
    "e2e:open": "bun run e2e:install && bunx start-server-and-test \"bun run e2e:dev\" http://127.0.0.1:3000 \"bunx cypress open --e2e\"",
    "e2e:chrome": "bunx cypress run --e2e --browser chrome",
    "e2e:edge": "bunx cypress run --e2e --browser edge",
    "e2e:electron": "bunx cypress run --e2e --browser electron",
    "e2e:firefox": "bunx cypress run --e2e --browser firefox",
    "lhci:mobile": "lhci autorun",
    "lhci:desktop": "lhci autorun --collect.settings.preset=desktop",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "babel-plugin-react-compiler": "^1.0.0",
    "clsx": "2.1.1",
    "feed": "4.2.2",
    "fuse.js": "7.1.0",
    "github-slugger": "2.0.0",
    "gray-matter": "4.0.3",
    "next": "15",
    "next-image-export-optimizer": "^1.19.0",
    "next-themes": "0.4.6",
    "nuqs": "^2.8.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-social-media-embed": "^2.5.18",
    "rehype": "13.0.2",
    "rehype-autolink-headings": "7.1.0",
    "rehype-prism-plus": "2.0.1",
    "rehype-raw": "7.0.0",
    "rehype-slug": "6.0.0",
    "rehype-stringify": "10.0.1",
    "remark": "15.0.1",
    "remark-gfm": "4.0.1",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.2",
    "unified": "11.0.5",
    "yaml": "2.8.1",
    "zod": "4.1.5"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@storybook/addon-essentials": "8.4.5",
    "@storybook/addon-interactions": "8.4.5",
    "@storybook/blocks": "8.4.5",
    "@storybook/nextjs": "8.4.5",
    "@storybook/react": "8.4.5",
    "@storybook/test": "8.4.5",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "cypress": "15.6.0",
    "eslint": "9.35.0",
    "eslint-config-next": "15.5.2",
    "jsdom": "26.1.0",
    "postcss": "8.5.6",
    "serve": "14.2.5",
    "start-server-and-test": "2.0.5",
    "storybook": "8.4.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "browserslist": {
    "production": [
      "last 2 Chrome versions",
      "last 2 Safari versions",
      "last 2 Firefox versions",
      "not dead",
      "not ie > 0"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
